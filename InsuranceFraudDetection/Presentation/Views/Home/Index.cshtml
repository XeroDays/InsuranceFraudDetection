@{
    ViewData["Title"] = "Home";
}

<div class="text-center"> 
     
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-list-ul"></i> View All Claims
                    </h5>
                    <p class="card-text">Browse and manage all insurance claims in the system.</p>
                    <a asp-controller="Claims" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-eye"></i> View Claims
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-plus-circle"></i> Submit New Claim
                    </h5>
                    <p class="card-text">Submit a new insurance claim for processing.</p>
                    <a asp-controller="Claims" asp-action="Submit" class="btn btn-success">
                        <i class="bi bi-plus"></i> Submit Claim
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap 5 Progress Bar Example -->
    <div class="row mt-4">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">System Statistics</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Claims Processed Today</label>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fraud Detection Accuracy</label>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 92%" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100">92%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
