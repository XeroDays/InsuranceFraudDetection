@{
    ViewData["Title"] = "Claim Submitted Successfully";
}

<div class="text-center">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Claim Submitted Successfully!</h4>
        <p>Your claim has been submitted and is now being processed.</p>
        <hr>
        <p class="mb-0">Claim ID: <strong>@ViewBag.ClaimId</strong></p>
    </div>
    
    <div class="mt-4">
        <a asp-action="Details" asp-route-id="@ViewBag.ClaimId" class="btn btn-primary">View Claim Details</a>
        <a asp-action="Index" class="btn btn-secondary">View All Claims</a>
        <a asp-action="Submit" class="btn btn-success">Submit Another Claim</a>
    </div>
</div>
